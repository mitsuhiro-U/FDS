<div class="container">
  <h4>企業様用新規会員登録</h4>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <% if resource.errors.any? %>
      <p class="text-danger">全ての項目が入力必須です。</p>
      <p class="text-danger">御社名(カナ)は全角カタカナで入力してください。</p>
    <% end %>

    <div class="row mt-3">
      <div class="col-sm-3">
        <%= f.label :name, "御社名" %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :name, size: 40 %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-sm-3">
        <%= f.label :name_kana, "御社名(カナ)" %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :name_kana, size: 40 %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-sm-3">
        <%= f.label :established, "設立" %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :established %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-sm-3">
        <%= f.label :capital, "資本金" %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :capital %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-sm-3">
        <%= f.label :annual_sales, "年商" %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :annual_sales %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-sm-3">
        <%= f.label :president, "代表者" %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :president %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-sm-3">
        <%= f.label :email, "メールアドレス" %>
      </div>
      <div class="col-sm-9">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 50 %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-sm-3">
        <%= f.label :password, "パスワード" %>
      </div>
      <div class="col-sm-9">
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上入力してください)</em>
        <% end %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-sm-3">
        <%= f.label :password_confirmation, "パスワード確認用" %>
      </div>
      <div class="col-sm-9">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-sm-3"></div>
      <div class="col-sm-9">
        <%= f.submit "登録する", class: "btn btn-primary" %>
      </div>
    </div>

  <% end %>

  <div class="row mt-3">
    <%= link_to "求職者様向け新規会員登録ページはこちら", new_user_registration_path %>
  </div>

</div>
