<!DOCTYPE html>
<html>
  <head>
    <title>FDS</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">

        <%= link_to top_path, method: :get do %>
          <img src="images/FDS_logo.png">
        <% end %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="#navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">

            <% if user_signed_in? %>
              <li class=" nav-item mr-5">
                ようこそ、<%= current_user.last_name %>さん！
              </li>
              <li class="btn btn-outline-secondary nav-item mr-5">
                <%= link_to "マイプロイール", users_path %>
              </li>
              <li class="btn btn-outline-secondary nav-item mr-5">
                <%= link_to "フォロー申請一覧", followers_path %>
              </li>
              <li class="btn btn-outline-secondary nav-item mr-5">
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
              </li>
              <li class="btn btn-outline-secondary nav-item mr-5">
                <%= link_to "退会", edit_users_path %>
              </li>

            <% elsif enterprise_signed_in? %>
              </li>
                <li class="btn btn-outline-secondary nav-item mr-5">
                  <%= link_to "チャットルーム", enterprise_enterprises_path %>
                </li>
                <li class="btn btn-outline-secondary nav-item mr-5">
                  <%= link_to "求職者様一覧",  enterprise_users_path %>
                </li>
                <li class="btn btn-outline-secondary nav-item mr-5">
                  <%= link_to "スキル表から検索", enterprise_user_search_path %>
                </li>
                <li class="btn btn-outline-secondary nav-item mr-5">
                <%= link_to "ログアウト", destroy_enterprise_session_path, method: :delete %>
                </li>
                <li class="btn btn-outline-secondary nav-item mr-5">
                  <%= link_to "退会", enterprise_withdrawal_path %>
                </li>

            <% else %>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown1" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    求職者様用メニュー
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown1">
                    <%= link_to "FDSについて", about_path, class: "dropdown-item" %>
                    <%= link_to "無料会員登録", new_user_registration_path, class: "dropdown-item" %>
                    <%= link_to "ログイン", new_user_session_path, class: "dropdown-item" %>
                </div>
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown2" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    企業様用メニュー
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown2">
                    <%= link_to "FDSについて", about_path, class: "dropdown-item" %>
                    <%= link_to "会員登録", new_user_registration_path, class: "dropdown-item" %>
                    <%= link_to "ログイン", new_user_session_path, class: "dropdown-item" %>
                </div>
              </li>
            <% end %>

          </ul>
        </div>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
