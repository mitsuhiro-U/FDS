<div class="container">

  <h4><%= @enterprise.name %></h4>

  <div class="row mt-3">
    <div class="col-sm-3">
      社名
    </div>
    <div class="col-sm-9">
      <%= @enterprise.name %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-sm-3">
      社名(カナ)
    </div>
    <div class="col-sm-9">
      <%= @enterprise.name_kana %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-sm-3">
      設立
    </div>
    <div class="col-sm-9">
      <%= @enterprise.established %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-sm-3">
      資本金
    </div>
    <div class="col-sm-9">
      <%= @enterprise.capital %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-sm-3">
      年商
    </div>
    <div class="col-sm-9">
      <%= @enterprise.annual_sales %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-sm-3">
      代表者
    </div>
    <div class="col-sm-9">
      <%= @enterprise.president %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-sm-3">
      業務内容
    </div>
    <div class="col-sm-9">
      <%= @enterprise.business_content %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-9">
      <% if @enterprise.following?(current_user) %>
        <%= link_to 'チャットを始める', chat_path(@enterprise.id), class: "btn btn-success mt-5" %>
      <% else %>
        <p>フォローされていません。</p>
      <% end %>
    </div>
  </div>


</div>