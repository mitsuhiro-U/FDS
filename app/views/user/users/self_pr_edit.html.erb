<div class="container">
  <h4>自己PR</h4>
  <p><span class="text-danger">*</span>は入力必須事項です。</p>
  <p class="text-danger"><%= alert %></p>
  <%= form_with model: @user, url: self_pr_update_path, local: true do |f| %>
    <div class="mt-3">
      <%= f.label :job_career, "職務経歴" %><span class="text-danger">*</span><br>
      <%= f.label :job_career, "※200字以内" %><br>
      <%= f.text_area :job_career, maxlength: 200, class: 'js-text-200 form-size' %>
      <p class="js-text-count-200"></p>
    </div>
    <div class="mt-3">
      <%= f.label :job_summary, "職務要約" %><span class="text-danger">*</span><br>
      <%= f.label :job_summary, "※2,000字以内" %><br>
      <%= f.text_area :job_summary, maxlength: 2000, class: 'js-text-2000 form-size-2000' %>
      <p class="js-text-count-2000"></p>
    </div>
    <div class="mt-3">
      <%= f.submit "更新する", class: "btn btn-success" %>
    </div>
  <% end %>
</div>