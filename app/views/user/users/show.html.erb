<div class="container">
  <h4>プロフィール</h4>

  <div class="row mt-3">
    <div class="col-sm-2">
      <p>スキル表</p>
    </div>
    <div class="col-sm-2">
      <% if current_user.specialized_field == nil %>
        <p>未入力</p>
      <% else %>
        <p>入力済</p>
      <% end %>
    </div>
    <div class="col-sm-8">
      <%= link_to "スキル表入力", skill_sheet_edit_path, class: "btn btn-success w-25" %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-sm-2">
      <p>希望条件</p>
    </div>
    <div class="col-sm-2">
      <% if current_user.desired_salary == nil %>
        <p>未入力</p>
      <% else %>
        <p>入力済</p>
      <% end %>
    </div>
    <div class="col-sm-8">
      <%= link_to "希望条件入力", desired_condition_edit_path, class: "btn btn-success w-25" %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-sm-2">
      <p>自己PR</p>
    </div>
    <div class="col-sm-2">
      <% if current_user.job_career == nil %>
        <p>未入力</p>
      <% else %>
        <p>入力済</p>
      <% end %>
    </div>
    <div class="col-sm-8">
      <%= link_to "自己PR入力", self_pr_edit_path, class: "btn btn-success w-25" %>
    </div>
  </div>

</div>
