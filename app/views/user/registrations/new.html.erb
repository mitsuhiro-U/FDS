<div class="container">

  <h4>新規会員登録</h4>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "user/shared/error_messages", resource: resource %>

    <div class="row mt-3">
      <div class="col-sm-3">
        <%= f.label :last_name, "姓" %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :last_name, placeholder: "佐藤" %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-sm-3">
        <%= f.label :first_name, "名" %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :first_name, placeholder: "太郎" %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-sm-3">
        <%= f.label :last_name_kana, "姓(カナ)" %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :last_name_kana, placeholder: "サトウ" %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-sm-3">
        <%= f.label :first_name_kana, "名(カナ)" %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :first_name_kana, placeholder: "タロウ" %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-sm-3">
        <%= f.label :birthday, "生年月日" %>
      </div>
      <div class="col-sm-9">
        <%= f.date_select :birthday, use_month_numbers: true,start_year: 1950, end_year: (Time.now.year - 16), default: Date.new(1980, 1, 1) %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-sm-3">
        <%= f.label :gender, "性別" %>
      </div>
      <%# 0＝"男性" 1＝"女性" %>
      <div class="col-sm-9">
        <%= f.label :gender, '男性', value: 0 %>
        <%= f.radio_button :gender, '0' %>
        <%= f.label :gender, '女性', value: 1 %>
        <%= f.radio_button :gender, '1' %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-sm-3">
        <%= f.label :email, "メールアドレス" %>
      </div>
      <div class="col-sm-9">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレスを入力", size: 60 %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-sm-3">
        <%= f.label :password, "パスワード" %>
      </div>
      <div class="col-sm-9">
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上入力してください)</em>
        <% end %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-sm-3">
        <%= f.label :password_confirmation, "パスワード(確認用)" %>
      </div>
      <div class="col-sm-9">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-sm-3"></div>
      <div class="col-sm-9">
        <%= f.submit "新規会員登録"-"%>
      </div>
    </div>

  <% end %>

</div>